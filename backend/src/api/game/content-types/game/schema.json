{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": "Partite create dalle mamme con codice invito"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "prize": {
      "type": "string",
      "required": false,
      "maxLength": 150
    },
    "revealAt": {
      "type": "datetime",
      "required": false
    },
    "inviteCode": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "ownedGames",
      "required": true
    },
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "joinedGames"
    },
    "allNames": {
      "type": "json",
      "required": false
    },
    "selectedNames": {
      "type": "json",
      "required": false
    }
  }
}
